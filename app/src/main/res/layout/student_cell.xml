                <!--android:text="@string/cancel"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="@dimen/small_font"-->
                <!--android:visibility="gone" />-->
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>