            </LinearLayout>

            <TextView
                android:id="@+id/subDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_presence"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/small_font" />

            <com.cleveroad.adaptivetablelayout.AdaptiveTableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellMargin="1dp"
                android:visibility="gone"
                app:dragAndDropEnabled="false"
                app:fixedHeaders="true"
                app:solidRowHeaders="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/student"
                android:orientation="vertical"
                android:padding="@dimen/small_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/listStudent"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/small_title"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvStudents"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical" />

                <Button
                    android:id="@+id/btnAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:background="@drawable/rounded_button"
                    android:padding="@dimen/small_padding"
                    android:text="@string/presence_all"
                    android:visibility="gone"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/overview"
            android:textColor="@color/textColor"
            android:textSize="@dimen/small_title"
            android:textStyle="bold"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@drawable/rounded_botom_background"
            android:id="@+id/layoutPhotos"
            android:elevation="1dp"
            android:orientation="vertical"
            android:padding="@dimen/small_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_margin"
                android:background="@drawable/rounded_half_background"
                android:orientation="horizontal"
                android:paddingStart="@dimen/small_margin"
                android:paddingTop="@dimen/small_padding"
                android:paddingEnd="@dimen/margin"
                android:paddingBottom="@dimen/small_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_padding"
                    android:src="@drawable/baseline_insert_photo_24"
                    android:tint="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/photos"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/photoBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    android:text="@string/nophotos"
                    android:id="@+id/nophotosLabel"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_padding"
                    android:text="@string/photos"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/small_title"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/small_margin"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layoutPhoto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/student"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/photo1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="@dimen/small_margin" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutPhoto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/small_padding"
                        android:layout_marginEnd="@dimen/small_padding"

                        android:background="@drawable/student"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/photo2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            android:layout_margin="@dimen/small_margin"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutPhoto3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/student"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/photo3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            android:layout_margin="@dimen/small_margin" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@drawable/rounded_button"
                    android:padding="@dimen/small_padding"
                    android:text="@string/save"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white" />
            </LinearLayout>
